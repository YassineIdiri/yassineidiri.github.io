<style>
  /* ====== Layout général ====== */
  .about-cv {
    display: grid;
    gap: 2rem;
  }
  @media (min-width: 58rem) {
    .about-cv {
      grid-template-columns: 1fr 2fr;
      align-items: start;
    }
  }

  /* ====== Bio card ====== */
  .bio-card {
    padding: 1.5rem;
    border-radius: 1.25rem;
    background: radial-gradient(120% 120% at 10% 10%, rgba(255,255,255,.04), transparent 60%),
                linear-gradient(180deg, rgba(255,255,255,.05), rgba(255,255,255,.02));
    box-shadow: var(--shadow-md);
    color: var(--gray-0);
  }

    .bio-card2 {
    padding: 1.5rem;
    border-radius: 1.25rem;
    background: radial-gradient(120% 120% at 10% 10%, rgba(255,255,255,.04), transparent 60%),
                linear-gradient(180deg, rgba(255,255,255,.05), rgba(255,255,255,.02));
    color: var(--gray-0);
  }
  .bio-card h2 { font-size: var(--text-xl); margin: 0 0 .5rem 0; }
  .bio-card p  { color: var(--gray-200); line-height: 1.7; margin: .75rem 0; }
  .btn {
    display: inline-block; margin-top: 1rem; padding: .75rem 1rem;
    border-radius: .875rem; background: var(--accent); color: #000;
    text-decoration: none; font-weight: 700; box-shadow: var(--shadow-sm);
    transition: transform .12s var(--ease-2), box-shadow .12s var(--ease-2);
  }
  .btn:hover, .btn:focus-visible { transform: translateY(-1px); box-shadow: var(--shadow-md); }

  /* ====== Timeline ====== */
  .timeline { display: grid; gap: 1rem; }
  .timeline-item {
    display: grid;
    grid-template-columns: 9rem 2rem 1fr; /* dates | ligne | contenu */
    gap: 0;
    align-items: start;
  }
  @media (max-width: 42rem) {
    .timeline-item { grid-template-columns: 7.5rem 1.5rem 1fr; }
  }

  /* Colonne dates */
  .date { padding-top: .25rem; color: var(--gray-300); }
  .date-inner { display: flex; align-items: center; gap: .25rem; font-size: var(--text-sm); }
  .dash { opacity: .6; }

  /* Colonne ligne verticale + bullet */
  .line {
    position: relative;
    min-height: 100%;
  }
  .line::before {
    content: "";
    position: absolute; left: calc(50% - 1px); top: 0; bottom: 0;
    width: 2px;
    background: linear-gradient(180deg, var(--gray-600), transparent);
    opacity: .6;
  }
  .timeline-item .line::after {
    /* pastille au niveau du début de la carte */
    content: "";
    position: absolute; left: 50%; top: .75rem; transform: translate(-50%, -50%);
    width: .9rem; height: .9rem; border-radius: 999px;
    background: var(--surface-3, #0e0e0f);
    border: 2px solid var(--accent);
    box-shadow: 0 0 0 4px rgba(0,0,0,.25);
  }

  /* Colonne contenu */
  .card {
    padding: 1rem 1rem 1rem 1.15rem;
    background: rgba(255,255,255,.03);
    border: 1px solid rgba(255,255,255,.06);
    border-radius: 1rem;
    box-shadow: var(--shadow-sm);
  }
  .title { margin: 0 0 .35rem 0; font-size: var(--text-lg); color: var(--gray-0); }
  .desc  { margin: 0; color: var(--gray-200); line-height: 1.75; }

  /* SR-only */
  .sr-only {
    position: absolute !important; width:1px; height:1px; padding:0; margin:-1px;
    overflow:hidden; clip: rect(0,0,0,0); white-space:nowrap; border:0;
  }
</style>
